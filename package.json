{
  "name": "mcp-oci-logan-server",
  "version": "2.0.0",
  "description": "MCP Server for OCI Logging Analytics integration with Logan Security Dashboard",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "oci",
    "logging-analytics",
    "security",
    "logan",
    "model-context-protocol"
  ],
  "author": "Logan Security Dashboard Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "@types/node-fetch": "^2.6.12",
    "date-fns": "^4.1.0",
    "node-fetch": "^3.3.2",
    "oci-sdk": "^2.98.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitest/coverage-v8": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.8.3",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
